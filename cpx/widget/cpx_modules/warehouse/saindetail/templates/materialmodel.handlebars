                        <input name="" type="hidden" value="" id="mdFirstMaterial"/>
                        <span class="select-txt"></span>
                        <i class="select-icon glyphicon glyphicon-chevron-down"></i>
                        <ul>
                                
                        </ul>
                    </div>                      
                </div>
            </div>
        </div>
        <div class="form-group control-group">
            <label class="control-label">二级类别</label>
            <div class="controls">
                <div class="control">
                    <div id="mdSecondMaterialDiv" class="select-control">
