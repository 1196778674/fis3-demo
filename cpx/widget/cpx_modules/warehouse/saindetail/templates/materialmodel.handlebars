                        <i class="select-icon glyphicon glyphicon-chevron-down"></i>
                        <ul>
                                
                        </ul>
                    </div>                      
                </div>
            </div>
        </div>
        <div class="form-group control-group">
            <label class="control-label">预警数量</label>
            <div class="controls">
                <div class="control">
                    <input type="text" class="form-control" id="mdWarnNo">   
                </div>
            </div>
        </div>  
    </div>
    <div class="cpx-search-info">
        <div class="form-group control-group">
            <label class="control-label">规格(选填)</label>
